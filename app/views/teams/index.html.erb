<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Postion</th>
      <th>Role</th>
      <th>Statement</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class="picha"></div>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.postion %></td>
        <td><%= team.role %></td>
        <td><%= team.statement %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container">
  <h2 id="head">Meet the team</h2>

<br>
  <div class="row">
    <% @teams.each do |team|%>
    <div class="col-md-3 card">
        <div class="top">
          <%= image_tag team.avatar.url(:medium, :class=>"img-responsive"), id: "image-main"%>
        </div>
        <div class="details">
          <h4 class="card-title">
          <%= team.name %></h4>
          <h5><strong>Position: </strong><%= team.postion%></h5>
          <h5><strong>Role: </strong><%= team.role%></h5>
          <h6 class="text-muted">
          <strong>Statement:</strong> "<%= team.statement %>"</h6>
        </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Team', new_team_path %>
