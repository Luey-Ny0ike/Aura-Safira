<%= form_with(model: group, local: true) do |form| %>
<% if group.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(group.errors.count, "error") %>
    prohibited this group from being saved:</h2>

  <ul>
    <% group.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="field">
    <div class="col-md-10">
      <%= form.text_field :name, id: :group_name, :class=>"form-control", placeholder: "Group Name"%>
    </div>
  </div>


  <div class="field">
    <div class="col-md-10">
      <%= form.text_field :description, id: :group_description, :class=>"form-control", placeholder: "Short Description" %>
    </div>
  </div>

  <div class="actions">
    <div class="col-md-12">
      <%= form.submit :class=>"btn btn-default" %>
    </div>
  </div>
</div>
<% end %>
