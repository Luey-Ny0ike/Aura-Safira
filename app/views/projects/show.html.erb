<p id="notice"><%= notice %></p>

<div class="container-fluid projects">
  <div class="container"><br>
    <h4 id="tle"><%= @project.title%></h4><br>
    <div class="row">
      <div class="col-md-7">
        <%= image_tag @project.picture.url(:large), :class=>"img-responsive" %>
      </div>
      <div class="col-md-5">
        <h5>
          <strong>Project Description</strong>
        </h5>
        <hr class="linez"><br><br>
        <p>
          <%= @project.description %>
        </p>

        <h5>
          <strong>Project Details</strong>
        </h5>
        <hr class="linez"><br><br>
        <p>
          <strong>Status:
          </strong><%= @project.status %></p>
        <p>
          <strong>Skills:
          </strong><%= @project.skills %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <% if user_signed_in? %>
      <% if current_user.superadmin_role? %>
        <%= link_to 'Edit', edit_project_path(@project) %>
      <% end %>
    <% end %>
  </div>
</div>
