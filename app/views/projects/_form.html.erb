<%= form_with(model: project, local: true) do |form| %>
<% if project.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(project.errors.count, "error") %>
    prohibited this project from being saved:</h2>

  <ul>
    <% project.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="field">
    <div class="col-md-7">
      <%= form.label :cover_photo %>
      <%= form.file_field :picture %>
    </div>
  </div>
  <div class="field">
    <div class="col-md-10">
      <%= form.text_field :title, id: :project_title, :class=>"form-control", placeholder: "Title"%>
    </div>
  </div>


  <div class="field">
    <div class="col-md-10">
      <%= form.text_field :status, id: :project_status, :class=>"form-control", placeholder: "Status" %>
    </div>
  </div>

  <div class="field">
    <div class="col-md-10">
      <%= form.text_field :skills, id: :project_skills, :class=>"form-control", placeholder: "Skills" %>
    </div>
  </div>

  <div class="field">
    <div class="col-md-10">
      <%= form.cktext_area :description, id: :project_description, :class=>"form-control", placeholder: "Description", as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
    </div>
  </div>

  <div class="actions">
    <div class="col-md-12">
      <%= form.submit :class=>"btn btn-default" %>
    </div>
  </div>
</div>
<% end %>
